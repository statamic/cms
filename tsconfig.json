{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./packages/cms/types",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["resources/js/*"],
      "@statamic/ui": ["packages/ui/src/index.js"]
    },
    "types": ["node"]
  },
  "include": [
    "resources/js/bootstrap/cms",
    "packages/ui/src"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "resources/js/tests",
    "packages/cms"
  ]
}
