{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "@ui": ["resources/js/components/ui"],
            "@ui/*": ["resources/js/components/ui/*"],
            "@api": ["resources/js/api.js"],
            "@statamic/cms": ["packages/cms/src"],
            "@statamic/cms/*": ["packages/cms/src/*"]
        }
    }
}
