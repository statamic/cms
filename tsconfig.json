{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./resources/js/package/types",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": ["node"]
  },
  "include": [
    "resources/js/bootstrap/cms/*.js",
    "resources/js/components/ui/**/*.vue",
    "resources/js/components/fieldtypes/fieldtype.js",
    "resources/js/components/fieldtypes/index-fieldtype.js", 
    "resources/js/components/fieldtypes/Fieldtype.vue",
    "resources/js/components/fieldtypes/IndexFieldtype.vue",
    "resources/js/components/elevated-sessions/**/*",
    "resources/js/components/DateFormatter.js",
    "resources/js/components/actions/ItemActions.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "resources/js/tests",
    "resources/js/package"
  ]
}
